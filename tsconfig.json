{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
      "vite/client",
    ],
    "paths": {
      "theme": [
        "./node_modules/@lightningtv/l3-ui-theme-base"
      ]
    },
    "noEmit": true,
    "isolatedModules": true,
    "noImplicitAny": false,
  },
}